<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Habit Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #121212;
      color: #ffffff;
    }
    .form-control, .btn {
      border-radius: 0.5rem;
    }
    .habit-title {
      font-weight: bold;
    }
    .counter-badge {
      font-size: 0.9rem;
      background-color: #198754;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1">ğŸ“… Habit Tracker</span>
      <a href="/" class="btn btn-outline-light btn-sm">Home</a>
    </div>
  </nav>

  <div class="container">
    <!-- Add Habit -->
    <form action="/habits/add" method="POST" class="mb-4">
      <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Enter a new habit..." required>
        <button class="btn btn-success" type="submit">Add Habit</button>
      </div>
    </form>

    <!-- Habit List -->
    <div class="list-group">
      <% habits.forEach(habit => { %>
        <div class="list-group-item bg-dark text-white d-flex justify-content-between align-items-center">
          <div>
            <span class="habit-title"><%= habit.name %></span><br>
            <span class="badge bg-success mt-1">Days Performed: <%= habit.daysPerformed %></span>
          </div>

          <div class="btn-group">
            <!-- Increment Button -->
            <form action="/habits/increment/<%= habit._id %>" method="POST">
              <button class="btn btn-outline-warning btn-sm">+1 Day</button>
            </form>

            <!-- Edit Name -->
            <form action="/habits/edit/<%= habit._id %>" method="POST" class="ms-2 d-flex">
              <input type="text" name="updatedName" class="form-control form-control-sm me-2" placeholder="Edit name..." required>
              <button class="btn btn-outline-info btn-sm">âœï¸</button>
            </form>

            <!-- Delete Habit -->
            <form action="/habits/delete/<%= habit._id %>" method="POST" class="ms-2">
              <button class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete this habit?')">ğŸ—‘ï¸</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <div class="text-center mt-4">
  <a href="/" class="btn btn-outline-light">â† Back to Dashboard</a>
</div>

</body>
</html>
