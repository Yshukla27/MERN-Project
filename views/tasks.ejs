<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">

  <div class="container mt-5">
    <h1 class="text-center mb-4">ğŸ“ Task Manager</h1>

    <% if (taskCount > 3) { %>
      <div class="alert alert-danger text-center">
        âš ï¸ You have <%= taskCount %> pending tasks! Stop procrastinating, maybe?
      </div>
    <% } %>

    <!-- Add Task Form -->
    <form action="/tasks/add" method="POST" class="mb-4">
      <div class="row g-2">
        <div class="col-md-5">
          <input type="text" name="title" class="form-control" placeholder="Task title" required>
        </div>
        <div class="col-md-4">
          <input type="date" name="deadline" class="form-control" required>
        </div>
        <div class="col-md-3 d-grid">
          <button type="submit" class="btn btn-success">Add Task</button>
        </div>
      </div>
    </form>

    <!-- Task List -->
    <div class="row">
      <% tasks.forEach(task => { %>
        <div class="col-md-6">
          <div class="card mb-3 bg-secondary text-light">
            <div class="card-body">
              <h5 class="card-title <%= task.completed ? 'text-decoration-line-through' : '' %>">
                <%= task.title %>
              </h5>
              <p class="card-text">
                Deadline: <%= new Date(task.deadline).toLocaleDateString() %>
              </p>
              <% if (!task.completed) { %>
                <form action="/tasks/complete/<%= task._id %>" method="POST" class="d-inline">
                  <button class="btn btn-warning btn-sm">âœ” Mark Complete</button>
                </form>
              <% } %>
              <form action="/tasks/delete/<%= task._id %>" method="POST" class="d-inline">
                <button class="btn btn-danger btn-sm">ğŸ—‘ Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- Back to Dashboard -->
    <div class="text-center mt-4">
      <a href="/" class="btn btn-outline-light">â† Back to Dashboard</a>
    </div>
  </div>

</body>
</html>
